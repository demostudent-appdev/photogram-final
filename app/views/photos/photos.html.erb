<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table" border="1">
      <tr>
        <th>Image</th>
        <th>Caption</th>
        <th>Owner</th>
        <th>Posted</th>
        <th>Likes</th>
        <th></th>
      </tr>

       <% @photos.each do |photo| %>
        <tr>
          <td>
            <img src="<%= photo.image %>">
          </td>

          <td>
            <%= photo.caption %>
          </td>

          <td>
            <%= photo.poster.username %>
          </td>

          <td>
            <%= time_ago_in_words(photo.created_at) %>
          </td>

          <td>
            <%= photo.likes_count %>
          </td>

          <td>
            <a href="/photos/<%= photo.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>

    </table>
  </div>
</div>
