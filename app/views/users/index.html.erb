<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="is_private_box" name="query_is_private" value="1">

        <label class="custom-control-label" for="is_private_box">Is private</label>
      </div>

      <div class="form-group">
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" class="form-control">
      </div>

      <div class="form-group">
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" class="form-control">
      </div>

      <div class="form-group">
        <label for="password_digest_box">
          Password digest
        </label>

        <input type="text" id="password_digest_box" name="query_password_digest" class="form-control">
      </div>

      <div class="form-group">
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count" class="form-control">
      </div>

      <div class="form-group">
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Is private
        </th>

        <th>
          Username
        </th>

        <th>
          Email
        </th>

        <th>
          Password digest
        </th>

        <th>
          Comments count
        </th>

        <th>
          Likes count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>

        <td>
          <%= user.is_private %>
        </td>

        <td>
          <%= user.username %>
        </td>

        <td>
          <%= user.email %>
        </td>

        <td>
          <%= user.password_digest %>
        </td>

        <td>
          <%= user.comments_count %>
        </td>

        <td>
          <%= user.likes_count %>
        </td>

        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
