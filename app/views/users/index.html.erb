<h1>List of users</h1>

<!-- <hr> -->

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.username %>
    </td>

    <td>
      <% if user.is_private%>
        Yes
      <% end %>
      <% if !(user.is_private)%>
        No
      <% end %>
    </td>

    <td>
      <% if session.fetch(:user_id).present?%>
        <form action="/insert_follow_request" method="post">
          <input type="hidden" name="query_recipient_id" value=<%= user.id %>>
          <button>Follow</button>
        </form>
      <% end %>
    </td>

    <td>
      <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>