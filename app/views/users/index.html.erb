<h1>List of users</h1>

<!-- <hr> -->

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.username %>
    </td>

    <td>
      <% if user.is_private%>
        Yes
      <% end %>
      <% if !(user.is_private)%>
        No
      <% end %>
    </td>

    <td>
      <% if session.fetch(:user_id).present?%>
        <!-- If not following a user (not_found)-->
        <% if @current_user.follow_status?(user.id) == "not_found"%>
          <form action="/insert_follow_request" method="post">
            <input type="hidden" name="query_recipient_id" value=<%= user.id %>>
            <button>Follow</button>
          </form>
        <!-- If already following a user (accepted)-->
        <% elsif @current_user.follow_status?(user.id) == "accepted"%>
          <a href="/delete_follow_request/<%= user.id %>">Unfollow</a>
        <!-- If follow request is pending (pending)Request sent. Cancel -->
        <% elsif @current_user.follow_status?(user.id) == "pending"%>
          Request sent. <a href="/delete_follow_request/<%= user.id %>">Cancel</a>
        <% else %>
        <!-- If user was blocked (rejected) Nothing to show-->
        <% end %>
      <% end %>
    </td>

    <td>
      <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>